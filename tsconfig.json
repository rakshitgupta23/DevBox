{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/CodeCard.tsx",
    "components/CodeEditor.tsx",
    "components/CustomInput.tsx",
    "components/LanguageDropdown.tsx",
    "components/Navbar.tsx",
    "components/OutputDetails.tsx",
    "components/OutputWindow.tsx",
    "components/ThemeDropdown.tsx",
    "constants/customStyles.ts",
    "constants/languageOptions.ts",
    "hooks/useKeyPress.tsx",
    "lib/defineTheme.ts",
    "lib/mongodb.ts",
    "lib/toast.ts",
    "pages/api/auth/[...nextauth].ts",
    "pages/api/auth/signup.ts",
    "pages/api/deleteCode.ts",
    "pages/api/saveCode.ts",
    "pages/api/updateCode.ts",
    "pages/auth/login.tsx",
    "pages/auth/signup.tsx",
    "pages/_app.tsx",
    "pages/dashboard.tsx",
    "pages/index.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
